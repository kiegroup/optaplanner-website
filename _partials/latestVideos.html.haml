.panel.panel-default
  .panel-heading Latest videos
  .panel-body
    %ul.list-unstyled
      - for video in site.videos[0,7]
        %li(style="margin-bottom: 10px;")
          .title
            %a{:href => "https://youtu.be/#{video.youtubeId}"}
              %img{:src => relative("/headerFooter/youtubeLogo.png", page.outputPage), :alt => "YT", :style => "height:16px; width:auto"}
              = video.title
          .small
            = video.date.strftime('%a %-d %B %Y')
          - if !video.author.nil?
            = partial('userBadge.html.haml', :outputPage => page, :userId => video.author, :mode => 'inline')
    .small.pull-right
      %a(href="https://www.youtube.com/channel/UCcpkOKpujFlM67D2h0RdaeQ")
        Video archive
