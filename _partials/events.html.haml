.panel.panel-default
  .panel-heading Upcoming events
  .panel-body
    %ul.list-unstyled
      - for event in site.events
        - if event.date >= Date.today
          %li(style="margin-bottom: 10px;")
            .title
              %a{:href => event.url}
                - if !event.title.empty?
                  #{event.eventOrganization}: #{event.title}
                - else
                  #{event.eventOrganization}
            %div
              #{event.location} - #{event.date.strftime('%a %-d %B %Y')}
            - if !event.presenters.empty?
              .small
                by #{event.presenters}
    .small.pull-right
      %a{:href => "https://github.com/droolsjbpm/optaplanner-website/blob/master/_config/events.yml"}
        Add event
      #{'/'}
      %a{:href => relative("/community/eventsArchive.html")}
        Archive
