%html{:lang => page.lang ? page.lang : site.lang}
  %head
    -# Adobe Analytics for Red Hat - DPAL (DTM Property Auto-Loader) - part 1/2
    :plain
      <script id="dpal" src="https://www.redhat.com/dtm.js" type="text/javascript"></script>
    -# Google Analytics for kie team: Global site tag (gtag.js)
    :plain
      <script async src="https://www.googletagmanager.com/gtag/js?id=#{site.googleAnalyticsId}"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', '#{site.googleAnalyticsId}');
      </script>
    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %title #{escape_once(site.title + " - " + page.title)}
    %meta(name="description"){:content => page.description ? page.description : site.description}
    %meta(name="keywords"){:content => page.keywords ? page.keywords : site.keywords}
    %link(rel="canonical"){:href => page.canonical_url ? page.canonical_url : "#{site.canonicalBaseUrl}#{page.url}"}
    - if page.url.eql? '/'
      %meta(name="google-site-verification"){:content => "#{site.googleWebmasterToolsVerificationId}"}
    -# Social media: make it look good when shared
    %meta(property="og:title"){:content => escape_once(page.title)}
    %meta(property="og:description"){:content => page.description ? page.description : site.description}
    %meta(property="og:url"){:content => "#{site.canonicalBaseUrl}#{page.url}"}
    %meta(property="og:site_name"){:content => "OptaPlanner"}
    %meta(property="og:type"){:content => page.ogType ? page.ogType : "website"}
    %meta(property="og:image"){:content => page.share_image_url ? page.share_image_url : "#{site.canonicalBaseUrl}/headerFooter/optaPlannerIcon.png"}
    %meta(name="twitter:card"){:content => "summary"}
    %meta(name="twitter:site"){:content => "@OptaPlanner"}

    %link(rel="stylesheet"){:href => relative("/website/bootstrap/css/bootstrap.min.css")}
    %link(rel="stylesheet"){:href => relative("/website/highlight/highlight.css")}
    %link(rel="stylesheet"){:href => relative("/website/optaplannerWebsite.css")}
